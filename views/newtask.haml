%h1 Create New Task

%form{:action => "/users/#{current_user.id}/addtask/new", :method => "post"}
  %label{:name => "tname"}Task Name
  %input{:type => "text", :name => "tname"}

  %label{:name => "tdisc"} Description
  %textarea{:type => "text", :name => "tdisc"}

  %label{:name => "tdate"} Date
  %input{:type => "date", :name => "tdate"}

  %label{:name => "ttime"} Time
  %input{:type => "time", :name => "ttime"}

  %label{:name => "location"} Location
  %input{:type => "text", :name => "location"}

  %br

  %input{:type => "submit", :class => "btn"}





 

